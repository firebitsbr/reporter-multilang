BIN_DIR      = bin
LIB_DIR      = lib
SRC_DIR      = src
BASE_PACKAGE = PDFAPI2PKG
BASE_CLASS   = $(BASE_PACKAGE).pm
CLASSES      = $(SRC_DIR)/$(BASE_CLASS) $(SRC_DIR)/$(BASE_PACKAGE)
PRJ_PREFIX   = reporter-
PRJ_SUFFIX   = sql-pdf
SCRIPT1      = $(PRJ_PREFIX)my$(PRJ_SUFFIX)
SCRIPT2      = $(PRJ_PREFIX)pg$(PRJ_SUFFIX)

# Specify flags and other vars here.
PERL      = perl
PERLFLAGS = -c

CD           = cd
GREP         = grep
EXIT         = exit
EXIT_FAILURE = 1
EXIT_SUCCESS = 0
MKDIR        = mkdir
ECHO         = echo
ECHOFLAGS    = -e
SED          = sed
SEDFLAGS     = -i -e
SEDREGEX     = "s/^\ //g"
CHMOD        = chmod
CHMODFLAGS   = -v
CHMODMODE    = 755
CP           = cp
CPFLAGS      = -vR
RMFLAGS      = -vR

# Startup scripts for MySQL and PostgreSQL implementations like here documents.
# MySQL:
define SCRIPT1_FULL
#!/usr/bin/env $(PERL)\n\
# =============================================================================\n\
# reporter-core/sql-pdf/$(PERL)/$(BIN_DIR)/$(SCRIPT1)\n\
# =============================================================================\n\
# Reporter Multilang. Version 0.1\n\
# =============================================================================\n\
# Autogenerated by GNU Make.\n\
\n\
use strict;\n\
use warnings;\n\
use utf8;\n\
use v5.10;\n\
\n\
use lib \"$(LIB_DIR)\";\n\
\n\
use $(BASE_PACKAGE);\n\
\n\
## Constant: The DBMS name.\n\
use constant DBMS => \"mysql\";\n\
\n\
# Starting up the app.\n\
$(BASE_PACKAGE)->startup([DBMS]);\n\
\n\
# vim:set nu:et:ts=4:sw=4:
endef

# PostgreSQL:
define SCRIPT2_FULL
#!/usr/bin/env $(PERL)\n\
# =============================================================================\n\
# reporter-core/sql-pdf/$(PERL)/$(BIN_DIR)/$(SCRIPT2)\n\
# =============================================================================\n\
# Reporter Multilang. Version 0.1\n\
# =============================================================================\n\
# Autogenerated by GNU Make.\n\
\n\
use strict;\n\
use warnings;\n\
use utf8;\n\
use v5.10;\n\
\n\
use lib \"$(LIB_DIR)\";\n\
\n\
use $(BASE_PACKAGE);\n\
\n\
## Constant: The DBMS name.\n\
use constant DBMS => \"pgsql\";\n\
\n\
# Starting up the app.\n\
$(BASE_PACKAGE)->startup([DBMS]);\n\
\n\
# vim:set nu:et:ts=4:sw=4:
endef

# Making the target.
$(BIN_DIR) $(LIB_DIR):
	$(CD) $(SRC_DIR); \
	if [ -n "$$($(PERL) $(PERLFLAGS) $(BASE_CLASS) 2>&1 | $(GREP) 'failed')" ]; then \
		$(ECHO) "Error: Something gets wrong... Exiting..."; \
		$(EXIT) $(EXIT_FAILURE); \
	fi; \
	$(CD) -

	if [ ! -d "$(BIN_DIR)" ]; then \
		$(MKDIR) $(BIN_DIR); \
		if [ ! -d "$(LIB_DIR)" ]; then \
			$(MKDIR) $(LIB_DIR); \
		fi; \
		$(ECHO) $(ECHOFLAGS) "$(SCRIPT1_FULL)" > $(BIN_DIR)/$(SCRIPT1); \
		$(ECHO) $(ECHOFLAGS) "$(SCRIPT2_FULL)" > $(BIN_DIR)/$(SCRIPT2); \
		$(SED) $(SEDFLAGS) $(SEDREGEX) $(BIN_DIR)/*; \
		$(CHMOD) $(CHMODFLAGS) $(CHMODMODE) $(BIN_DIR)/*; \
		$(CP) $(CPFLAGS) $(CLASSES) $(LIB_DIR); \
	fi

.PHONY: all clean

all: $(BIN_DIR) $(LIB_DIR)

clean:
	$(RM) $(RMFLAGS) $(BIN_DIR) $(LIB_DIR)

# vim:set nu:et:ts=4:sw=4:
